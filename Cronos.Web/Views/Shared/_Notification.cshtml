<style type="text/css">
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.25);
    }

    .modal_content {
        background-color: white;
        position: absolute;
        top: 20%;
        left: 30%;
        width: 40%;
        padding: 20px;
        border-radius: 5px;
        border: 2px solid black;
    }
</style>

@if(TempData["success"] != null){
    <div class="modal">
        <div class="modal_content">
            <p>@TempData["success"]</p>
            <a asp-controller="Announcement" asp-action="Index" class="btn btn-primary">Okay</a>
        </div>
    </div>
}

@if(TempData["success"] != null){
<script type="text/javascript">
    const modal = document.querySelector(".modal")
    window.onload = ()=>{
            modal.style.display = "block";
    }
</script>
}